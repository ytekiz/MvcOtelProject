@model OtelMvcProje.Models.Entity.TblYeniKayit

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_MisafirLayout.cshtml";
    }
@using (Html.BeginForm("MisafirBilgiGüncelle", "Misafir", FormMethod.Post)) {
<br />
    <h2>Profil Sayfası</h2>
    <div class="form-group">
        @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
        @Html.Label("Ad Soyad")
        @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
        <br />
        @Html.Label("Telefon")
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
        <br /> 
        @Html.Label("Mail")
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.Şifre, new { @class = "form-control" })
        <br />
        <button class="btn btn-warning">Bilgileri Güncelle</button>
    </div>
}